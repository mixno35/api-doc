<?xml version="1.0" encoding="utf-8" ?>
<documentation>
    <api>
        <name>Авторизация через соц. сети</name>
        <description>Авторизация пользователя в системе через социальные сети</description>
        <url>{{baseUrl}}</url>

        <endpoint>
            <path>/auth/social/google</path>
            <method>GET</method>
            <description>Авторизация / Регистрация через Google</description>
            <header>
                <name>Content-Type</name>
                <value>application/json</value>
            </header>
            <parameter>
                <name>code</name>
                <type>s</type>
                <required>true</required>
                <description>Код сгенерированный Google</description>
                <example>GOOGLE_CODE</example>
            </parameter>
            <response>
                <status>200</status>
                <description>Регистрация прошла успешно</description>
                <example>
                    <![CDATA[{
                            "time": "2024-05-06 03:00:00",
                            "type": "success",
                            "message_id": "api_id_auth_social_success",
                            "message": "Authorization success",
                            "return": {
                                "token": "TOKEN"
                            }
                        }]]>
                </example>
                <return>
                    <name>token</name>
                    <type>s</type>
                    <description>Токен аутентификации пользователя</description>
                </return>
            </response>
            <response>
                <status>400</status>
                <description>Код авторизации Google пуст</description>
                <example>
                    <![CDATA[{
                        "time": "2024-05-06 03:00:00",
                        "status": "error",
                        "message_id": "api_id_auth_social_google_code_empty",
                        "message": "Code empty",
                        "return": {
                            "link": "GOOGLE_LINK"
                        }
                    }]]>
                </example>
                <return>
                    <name>link</name>
                    <type>s</type>
                    <description>Ссылка для авторизации / регистрации</description>
                </return>
            </response>
            <response>
                <status>400</status>
                <description>Код авторизации Google пуст</description>
                <example>
                    <![CDATA[{
                        "time": "2024-05-06 03:00:00",
                        "status": "error",
                        "message_id": "api_id_auth_social_google_service_error",
                        "message": "{}",
                        "return": {
                            "code": 401
                        }
                    }]]>
                </example>
                <return>
                    <name>code</name>
                    <type>i</type>
                    <description>Код ошибки</description>
                </return>
            </response>
        </endpoint>
    </api>
</documentation>